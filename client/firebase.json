{
  "hosting": {
    "site": "apigee-react",
    "public": "build",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [ 
      {
        "source": "/apim/apis",
        "run": {
          "serviceId": "apigee-portal",
          "region": "europe-west1"
        }
      },
      {
        "source": "**",
        "destination": "/index.html"
      }      
   ]
  }
}
